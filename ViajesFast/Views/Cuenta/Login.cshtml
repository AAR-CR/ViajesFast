
@model ViajesFast.Models.Usuario



<form asp-action="Login" method="post" class="bloque mx-auto">
    <div class="form-horizontal">
        <h1 class="text-center bloque text-white">Inicio de Sesión</h1>
        <h4 class="text-center text-white">Ingresa acá tu correo y contraseña:</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row justify-content-center">
            <label for="correoElectronico" class="col-sm-4 col-form-label text-warning text-right">Correo</label>
            <div class="col-sm-7">
                <input id="correoElectronico" name="correoElectronico" class="form-control" />
                <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row justify-content-center">
            <label for="contraseña" class="col-sm-4 col-form-label text-warning text-right">Contraseña</label>
            <div class="col-sm-7">
                <input id="contraseña" name="contraseña" type="password" class="form-control" />
                <span asp-validation-for="Contraseña" class="text-danger"></span>
            </div>
        </div>
        <hr />

        <div class="form-group row">
            <div class="col-sm-12 text-center">
                <button type="submit" class="btn btn-success">Iniciar Sesión</button>
            </div>
        </div>
    </div>
</form>